{
  "compilerOptions": {
    // "types": ["node"],
    "noEmit": false, // enable to genrate compiled js file in outDir
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    // "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      // "src/*": ["./src/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "index.ts"]
}
